# Doxyfile template for C++ project
# General configuration
PROJECT_NAME           = @CMAKE_PROJECT_NAME@
PROJECT_BRIEF          = "Project generated by CMake with Doxygen support"
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs
INPUT = @CMAKE_CURRENT_SOURCE_DIR@/README.md \
        @CMAKE_CURRENT_SOURCE_DIR@/admin \
        @CMAKE_CURRENT_SOURCE_DIR@/common \
        @CMAKE_CURRENT_SOURCE_DIR@/src
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
OPTIMIZE_OUTPUT_FOR_C  = NO
EXCLUDE_PATTERNS       = */test/*

# README as Main Page
USE_MDFILE_AS_MAINPAGE = @CMAKE_CURRENT_SOURCE_DIR@/README.md
IMAGE_PATH = @CMAKE_CURRENT_SOURCE_DIR@/docs/readme_images

# Build settings
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
GENERATE_MAN           = NO
GENERATE_XML           = NO

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

# Enable markdown
MARKDOWN_SUPPORT       = YES

# Documentation style
FILE_PATTERNS          = *.cpp *.hpp *.h *.c *.cc *.md *.markdown
INPUT_ENCODING         = UTF-8
TAB_SIZE               = 4
JAVADOC_AUTOBRIEF      = YES
QT_AUTOBRIEF           = YES

# Show all members in documentation
HIDE_SCOPE_NAMES       = NO
ALWAYS_DETAILED_SEC    = YES
FULL_PATH_NAMES        = YES
STRIP_FROM_PATH        = @CMAKE_CURRENT_SOURCE_DIR@

# Diagrams (require Graphviz)
HAVE_DOT               = YES
DOT_NUM_THREADS        = 2
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
CLASS_DIAGRAMS         = YES
DOT_IMAGE_FORMAT       = png
DOTFILE_DIRS           = @CMAKE_CURRENT_SOURCE_DIR@
MAX_DOT_GRAPH_WIDTH    = 1024
MAX_DOT_GRAPH_HEIGHT   = 1024
DOT_TRANSPARENT        = NO
GENERATE_TREEVIEW      = YES
TREEVIEW_WIDTH         = 250
INHERITANCE_GRAPH      = YES

# Output options
HTML_OUTPUT            = html
HTML_COLORSTYLE        = LIGHT
HTML_DYNAMIC_SECTIONS  = YES
HTML_TIMESTAMP         = YES
GENERATE_GROUPS        = NO

# Warnings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES